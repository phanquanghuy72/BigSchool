@model IEnumerable<Bigschool1.Model.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/View/Shared/_Layout.cshtml";
}
<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.Datetime.ToString("MM")                    
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit", "Courses", new int { id = course.Id })">
                    Edit
                </a>
                <a href="">Delete</a>
            </div>
        </li>
    }
</ul>

